{
  "name": "defi-token-suite",
  "version": "1.0.0",
  "description": "Complete DeFi token suite with smart contracts and web interface",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:contracts && npm run install:frontend",
    "install:contracts": "cd packages/contracts && npm install",
    "install:frontend": "cd packages/frontend && npm install",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "cd packages/contracts && npm run compile",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "npm run test:contracts && npm run test:frontend",
    "test:contracts": "cd packages/contracts && npm test",
    "test:frontend": "cd packages/frontend && npm test",
    "dev": "concurrently \"npm run dev:contracts\" \"npm run dev:frontend\"",
    "dev:contracts": "cd packages/contracts && npm run node",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "clean": "npm run clean:contracts && npm run clean:frontend",
    "clean:contracts": "cd packages/contracts && rm -rf cache artifacts node_modules",
    "clean:frontend": "cd packages/frontend && rm -rf .next node_modules dist",
    "deploy:ethereum": "cd packages/contracts && npm run deploy:ethereum",
    "deploy:base": "cd packages/contracts && npm run deploy:base",
    "deploy:sepolia": "cd packages/contracts && npm run deploy:sepolia",
    "deploy:base-sepolia": "cd packages/contracts && npm run deploy:base-sepolia"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/defi-token-suite.git"
  },
  "keywords": [
    "defi",
    "ethereum",
    "base",
    "tokens",
    "airdrop",
    "uniswap",
    "bridge",
    "monorepo"
  ],
  "license": "MIT",
  "author": "Your Name"
}